        <Button x:Name="btn_min" Content="_" Grid.Column="13" HorizontalAlignment="Left" Height="32" Margin="4,17,0,0" VerticalAlignment="Top" Width="46" FontWeight="Bold" FontSize="18" Click="Button_Click2" ToolTip="Свернуть">
