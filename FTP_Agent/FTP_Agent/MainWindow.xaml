                    <Button Content="" Grid.Column="8" HorizontalAlignment="Left" Height="32" Margin="8,1,0,0" VerticalAlignment="Top" Width="32">
                        <Button.Background>
                            <ImageBrush TileMode="Tile" ImageSource="/folder-add_icon-icons.com_52433.png"/>
