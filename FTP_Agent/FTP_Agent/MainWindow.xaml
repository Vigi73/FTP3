                        </Button.BorderBrush>
                        <Button.Background>
                            <ImageBrush ImageSource="/saveas_1173.png" Stretch="None"/>
                        </Button.Background>
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>
        <Image HorizontalAlignment="Center" Height="27" Margin="0,14,0,0" VerticalAlignment="Top" Width="37" Source="/agent_102942.png"/>
